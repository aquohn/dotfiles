general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "cpu_usage"
order += "cpu_temperature 0"
order += "load"
order += "memory"
order += "battery 0"
order += "wireless _first_"
order += "ethernet _first_"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

memory {
        format = "MEM: %percentage_used"
}

cpu_usage {
        format = "CPU: %usage"
}

load {
        format = "LOAD: %5min"
}

