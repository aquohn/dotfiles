general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "cpu_usage"
order += "load"
order += "memory"
order += "battery all"
order += "wireless _first_"
order += "ethernet _first_"
order += "tztime local"
order += "volume master"

wireless _first_ {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

memory {
        format = "MEM: %percentage_used"
}

cpu_usage {
        format = "CPU: %usage"
}

load {
        format = "LOAD: %5min"
}

battery all {
        format = "%status %percentage %remaining %consumption"
        format_down = "No battery"
        status_chr = "âš¡ CHR"
        status_bat = "ðŸ”‹ BAT"
        status_unk = "? UNK"
        status_full = "â˜» FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

tztime local {
        format = "%Y-%m-%d %H:%M"
}

volume master {
   format = "â™ª: %volume"
   format_muted = "â™ª: muted (%volume)"
   device = "pulse"
}

